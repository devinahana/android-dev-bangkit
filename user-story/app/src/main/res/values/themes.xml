<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UserStory" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">@dimen/button_corner_radius</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">@dimen/dialog_corner_radius</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/navy</item>
    </style>

    <style name="CustomActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/navy</item>
        <item name="titleTextStyle">@style/CustomActionBarTitleText</item>
    </style>
    <style name="CustomActionBarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.NegativeButton</item>
    </style>
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="backgroundInsetStart">@dimen/dialog_corner_radius</item>
        <item name="backgroundInsetEnd">@dimen/dialog_corner_radius</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <!-- Alert dialog positive button style -->
    <style name="Widget.App.PositiveButton" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.PositiveButton</item>
    </style>
    <style name="ThemeOverlay.App.PositiveButton" parent="ThemeOverlay.Material3.Button">
        <item name="colorContainer">@color/green</item>
        <item name="colorOnContainer">@color/white</item>
    </style>
    <!-- Alert dialog negative button style -->
    <style name="Widget.App.NegativeButton" parent="Widget.Material3.Button.TonalButton">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NegativeButton</item>
        <item name="android:layout_marginEnd">@dimen/button_corner_radius</item>
    </style>
    <style name="ThemeOverlay.App.NegativeButton" parent="ThemeOverlay.Material3.Button.TonalButton">
        <item name="colorContainer">@color/gray</item>
        <item name="colorOnContainer">@color/white</item>
    </style>

    <style name="Theme.UserStory" parent="Base.Theme.UserStory" />
</resources>