<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UserStory" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <style name="Theme.UserStory" parent="Base.Theme.UserStory" />

    <style name="CustomActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/navy</item>
        <item name="titleTextStyle">@style/CustomActionBarTitleText</item>
    </style>

    <style name="CustomActionBarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>